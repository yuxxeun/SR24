---
import Layout from "@layouts/Layout.astro";
import Header from "@components/common/Header.astro";
import { getCollection } from "astro:content";
import Blog from "@components/Blog.astro";
import SearchBar from "@components/SearchBar.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const title = "blog â€” yuxxeun";
const description =
  "i write about any things that feels interesting.";
---
<Layout title={title} description={description}>
  <section class="grid place-items-center text-center">
    <Header title="blog" />
    <p class="mb-10 tracking-tight max-w-prose font-normal italic font-newsreader lg:text-2xl text-xl">
      {description}
    </p>
  </section>
  <SearchBar />
  <h2 class="mt-12 text-2xl text-zinc-100">
    All posts
  </h2>
  <ul class="mt-6 text-lg grid grid-cols-1 gap-6 animate-fade-up animate-once animate-duration-1000 animate-ease-linear">
    {posts.map((p) => <Blog {...p} />)}
  </ul>
  <section class="mt-20 grid place-items-center text-center">
    <Header title="Want to stay updated?" />
    <p class="mb-8 mt-3 text-lg max-w-prose">
        Hey, you can subscribe my 
        <a class="underline" href="/rss.xml">RSS feed.</a>
        <br/>
        With this way, you can stay up to date to my latest posts.
    </p>
  </section>
</Layout>

