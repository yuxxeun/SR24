---
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
const title = "Not found";
const description = "Sorry, the page you are looking for does not exist.";
---

<Layout title={title} description={description}>
  <div class="mt-18 flex flex-col items-center gap-4">
    <Picture
      src="/loader.png"
      alt="Ghost fly!"
      loading="eager"
      class=""
      densities={[1.5, 2]}
      formats={["webp"]}
      width={250}
      height={250}
    />
    <p class="text-center font-medium text-zinc-900 dark:text-white">
      Ooops, this page doesn't exist.
    </p>
  </div>
</Layout>
