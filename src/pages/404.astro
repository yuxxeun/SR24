---
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
import bailu from "~/assets/bailu.png";
const title = "Not found";
const description = "Sorry, the page you are looking for does not exist.";
---

<Layout title={title} description={description}>
  <div class="mt-18 flex flex-col items-center gap-4">
    <Picture
      src={bailu}
      alt="Chibi Bailu from Honkai Star Rail (ctto)"
      loading="eager"
      class="aspect-square"
      densities={[1.5, 2]}
      formats={["webp"]}
      width={360}
      height={360}
    />
    <p class="text-center font-medium text-zinc-900 dark:text-white">
      Welp, this page doesn't exist.
    </p>
  </div>
</Layout>
