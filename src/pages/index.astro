---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
import Blog from "@components/Blog.astro";
import { Picture } from 'astro:assets';
import myImage from '../../public/krido.png';
import LoadingScreen from "@components/core/Loading";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout>
  <section class="text-center ">
    <LoadingScreen client:load/>
    <div class="grid place-items-center animate-fade-down animate-once animate-duration-1000 animate-delay-[2500ms] animate-ease-linear">
        <Picture src={myImage}
          title="yuxxeun cute avatar"
          alt="yuxxeun emoji"
          loading="eager" decoding="async" class="grayscale-0 aspect-square object-cover w-36 h-36" />
        <p class="-mt-3 mt-5 max-w-prose font-newsreader italic lg:text-2xl text-xl">
          thoughts, stories and very ideas.
        </p>
    </div>
  </section>
  <section class="pt-10">
    <ul class="mt-12 text-lg grid grid-cols-1 gap-6 animate-fade-up animate-once animate-duration-1000 animate-delay-[2500ms] animate-ease-linear">
      {posts.slice(0, 3).map((post) => <Blog {...post} />)}
    </ul>
    <a class="mt-7 inline-block text-lg transition-colors hover:text-zinc-400 dark:hover:text-zinc-50"
      href="/blog/">View all post &rarr;
    </a>
  </section>
</Layout>
